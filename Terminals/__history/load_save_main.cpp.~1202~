	for (int i = 0; i < trmnlsPep.Length; i++)
	{
		out.write((char*)&trmnlsPep[i].termPckd, sizeof(tElem));
		out.write((char*)&trmnlsPep[i].fromT, sizeof(unsigned _int8));
		out.write((char*)&trmnlsPep[i].toT, sizeof(unsigned _int8));
	}
	out.close();
